<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.user.mapper.UserAccountMapper">

    <select id="selectAvailableBalanceByUserIdAndType" resultType="java.math.BigDecimal">
        SELECT
            available_balance
        FROM
            user_account
        WHERE
            user_id = #{userId}
          AND type = #{type}
          AND status_flag = 0
          AND delete_flag = 0
    </select>

    <select id="selectCountByUserId" resultType="java.lang.Integer">
        SELECT
            COUNT( 1 )
        FROM
            user_account
        WHERE
            status_flag = 0
          AND delete_flag = 0
          AND user_id = #{userId}
    </select>

</mapper>